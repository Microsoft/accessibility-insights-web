{
  // This file contains checks for which there are still grandfathered-in pre-existing violations in the codebase
  // We eventually want there to only be one tslint.json file, and to have all checks be build-enforced
  "extends": "./tslint.build-enforced.json",
  "rules": {
    "indent": [true, "spaces"],
    "interface-name": [true, "never-prefix"],
    "max-line-length": [true, 140],
    "no-shadowed-variable": true, // Disallows shadowing variable declarations
    "variable-name": [true, "check-format", "allow-pascal-case", "allow-trailing-underscore", "ban-keywords"]
  }
}
