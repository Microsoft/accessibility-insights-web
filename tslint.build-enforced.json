{
    "rulesDirectory": ["tslint-microsoft-contrib"],
    "rules": {
        "arrow-parens": [true, "ban-single-arg-parens"],
        "await-promise": true,
        "class-name": true,
        "comment-format": [true, "check-space", { "ignore-words": ["TODO", "HACK", "NOTE"] }],
        "curly": true,
        "eofline": true,
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": true,
        "label-position": true,
        "member-access": true,
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-any": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
        "no-construct": true,
        "no-constructor-vars": false,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": [true, "allow-empty-functions"],
        "no-floating-promises": true,
        "no-inferrable-types": false,
        "no-internal-module": true,
        "no-null-keyword": false,
        "no-require-imports": true,
        "no-string-literal": false,
        "no-switch-case-fall-through": true,
        "no-this-assignment": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-var-requires": true,
        "one-line": [true, "check-open-brace", "check-whitespace"],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "ordered-imports": true,
        "quotemark": [true, "single", "avoid-escape", "jsx-double"],
        "radix": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "space",
                "index-signature": "space",
                "parameter": "space",
                "property-declaration": "space",
                "variable-declaration": "space"
            }
        ],
        "use-isnan": true,
        "use-strict": [false, "check-module", "check-function"],
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type", "check-type-operator"],

        // Security Rules.
        "no-banned-terms": true,
        "no-delete-expression": true,
        "no-disable-auto-sanitization": true,
        "no-document-domain": true,
        "no-duplicate-parameter-names": true,
        "no-eval": true,
        "no-exec-script": true,
        "function-constructor": true,
        "no-octal-literal": true,
        "no-string-based-set-immediate": true,
        "no-string-based-set-interval": true,
        "no-string-based-set-timeout": true
    }
}
